<div class="tt-team-outer" id="<%= team.name %>">
    <div class="tt-nonadmin-panel">
    </div>
  <div class="tt-rank-panel">
    <div class="big center"><%= link_to (rank + 1).ordinalize, teams_path %></div>
  </div>
  <div class="tt-team-inner">
    <div class="tt-main-team">
      <div class="tt-team-splash">
        <h1><%= link_to team.name.truncate(24), team %></h1>
      </div>
      <div class="tt-team-stats">
        <table class="table table-hover table-condensed tt-team-table">
          <tbody>
            <tr>
              <td>Playing Since</td>
              <td><%= team.created_at.strftime("%b %e / %Y") %></td>
            </tr>
            <tr>
              <td>Manager</td>
              <td><%= link_to team.user.username, team.user %></td>
            </tr>
            <tr>
              <td>Total Points</td>
              <td><%= team.points %></td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>
</div>
