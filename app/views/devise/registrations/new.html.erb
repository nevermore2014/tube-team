<div class="container">

  <%= form_for(resource, :as => resource_name, :url => registration_path(resource_name), html: { class: 'form-inline' }) do |f| %>
    <%= devise_error_messages! %>
    <div class="form-container">
       <h2>Welcome to TubeTeam!</h2>

      <%= f.text_field :username, :autofocus => true, class: 'outline-fix form-control', placeholder: "Username" %>

      <%= f.email_field :email, class: 'outline-fix form-control', placeholder: "Email" %>

      <%= f.password_field :password, class: 'outline-fix form-control',
      placeholder: "Password" %>

      <%= f.password_field :password_confirmation, class: 'outline-fix form-control', placeholder: "Confirm Password" %>
      <div class="signup">
      <%= f.submit "Sign up!", class: 'btn btn-blue' %>
      </div>
   </div>
  <% end %>
  <%= render "devise/shared/links" %>
</div>

